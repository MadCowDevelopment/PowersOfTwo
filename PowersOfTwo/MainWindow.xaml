<Window x:Class="PowersOfTwo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:powersOfTwo="clr-namespace:PowersOfTwo"
        Title="MainWindow" Height="430" Width="490">

  <Window.Resources>
    <DataTemplate DataType="{x:Type powersOfTwo:PlayerViewModel}">
      <powersOfTwo:PlayerControl/>
    </DataTemplate>
  </Window.Resources>
  <Window.InputBindings>
    <KeyBinding Key="Left" Command="{Binding LeftCommand}"/>
    <KeyBinding Key="Right" Command="{Binding RightCommand}"/>
    <KeyBinding Key="Up" Command="{Binding UpCommand}"/>
    <KeyBinding Key="Down" Command="{Binding DownCommand}"/>
  </Window.InputBindings>
  
  <Grid Background="BlanchedAlmond">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="2*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <ContentControl Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Content="{Binding Player}"/>
    <ContentControl Grid.Column="1" Grid.Row="1" Content="{Binding Opponent}"/>

  </Grid>

</Window>
